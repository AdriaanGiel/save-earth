.form-row
  width 80vw
  padding 2em
  @media $smartPhone
    width 90vw
    padding .2em

  @media $smartPhonePortrait
    width 95vw
  h6
    margin 0

.form-box
  border-radius 5px
  background-color white
  padding 2em 1.5em
  button
    width 100%
.box
  text-align center
  width 100%
  border-radius 5px
  background-color white
  padding 2em 1.5em

.box-img
  width 50%
.player-box
  padding 2em
  h3
    text-align center
    margin 0

  ul
    height 185px
    list-style-type none
    overflow scroll
    overflow-x hidden

.player-list
  padding: .2rem .5rem;
  margin: 0 .2rem;
  font-size: 90%;
  white-space: nowrap;
  background: #F1F1F1;
  border: 1px solid #E1E1E1;
  border-radius: 4px;
  width 100%