#earth
  height 100vh
  width 100vw
  background-image url("../img/earth.png")
  background-size 20%
  background-repeat no-repeat
  background-position center
  &:hover
    animation grow 5s ease-in-out


@keyframes grow
  0%
    background-size 30%
  20%
    background-size 40%
  40%
    background-size 50%
  60%
    background-size 60%
  80%
    background-size 70%
  100%
    background-size 80%
